<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.steventanjung.gowork.BarangActivity">


    <TextView
        android:id="@+id/nama_barang_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:text="Nama Barang"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/harga_barang_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/namabarang_nota"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Harga Satuan"
        android:text="Harga Satuan"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/jumlah_barang_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:text="Jumlah"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/deskripsi_barang_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:scrollbars="vertical"
        android:text="Deskripsi"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>