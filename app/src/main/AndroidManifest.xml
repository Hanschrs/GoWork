<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.steventanjung.gowork">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/gowork"
        android:label="Go Work"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:windowSoftInputMode="adjustPan" android:name=".AddUserActivity" />
        <activity android:windowSoftInputMode="adjustPan" android:name=".BarangActivity" />
        <activity android:windowSoftInputMode="adjustPan" android:name=".EditBarangActivity" />
        <activity android:windowSoftInputMode="adjustPan" android:name=".HomeActivity" />
        <activity android:windowSoftInputMode="adjustPan" android:name=".LihatBarangActivity" />
        <activity android:windowSoftInputMode="adjustPan" android:name=".LihatNotaActivity" />
        <activity android:windowSoftInputMode="adjustPan" android:name=".TambahNota" />
        <activity android:windowSoftInputMode="adjustPan" android:name=".UserActivity" />
        <activity android:windowSoftInputMode="adjustPan" android:name=".DetailBarangActivity" />
        <activity android:windowSoftInputMode="adjustPan" android:name=".DaftarBelanjaActivity"></activity>
    </application>

</manifest>